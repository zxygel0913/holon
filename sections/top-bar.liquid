{% if section.settings.display_top_adv_bar %}   
<div class="notification_bar header-top {% if section.settings.display_top_adv_bar_mobile %} medium-down--hide {% endif %}" style="{% if section.settings.notification_bar_bg_img != blank %}background-image:url('{{ section.settings.notification_bar_bg_img | img_url:'1920x' }}');background-repeat:no-repeat;background-size:cover;background-position:center;{% else %}background-color:{{ section.settings.notification_bar_bg }};{% endif %}">    
  <div class="top-text-container ">        
    <div class="{% render 'container-settings' %}"> 
      <div class="row">
        <div class="promo_section"> 
          {% if section.settings.notification_discount != blank  or section.settings.notification_discount_txt != blank or section.settings.notification_text != blank %}
          <div class="notification_text">
            {% if section.settings.notification_discount != blank %} <h2 style="color:{{ section.settings.notification_discount_clr }}">{{ section.settings.notification_discount }} </h2>{% endif %} 
            <div class="notify_discount">
              {% if section.settings.notification_discount_txt != blank %}  <p style="color:{{ section.settings.notification_discount_text_clr }}">{{ section.settings.notification_discount_txt }} </p>{% endif %} 
              {% if section.settings.notification_text != blank %}   <h4 style="color:{{ section.settings.notification_text_clr }}">{{ section.settings.notification_text }}</h4>{% endif %} 
            </div>
          </div>
          {% endif %}
          {% if section.settings.notification_promo_txt != blank or section.settings.notification_promo_code != blank  %}
          <div class="notification_promo_code">
            <p style="color:{{ section.settings.notification_promo_txt_clr }}">{{ section.settings.notification_promo_txt }} </p>
            <h6 style="color:{{ section.settings.notification_promo_code_clr }}">{{ section.settings.notification_promo_code }} </h6>
          </div>
          {% endif %}
          {% if section.settings.notification_linktxt != blank %} <div class="notification_promobtn"> <a class="dt-sc-btn btn" href="{{section.settings.header_notification_link }}">{{ section.settings.notification_linktxt }}</a> </div> {% endif %}    
        </div>
      </div>
    </div>
    <a href="javascript:void(0)" class="close"><i class="zmdi zmdi-close"></i></a>
  </div>
</div>
{% endif %}
{% if section.settings.display_top_bar %}
<div class="top_bar">
  <div class="top-text-container ">  
    <div class="{% render 'container-settings' %}"> 

      <div class="row">
        {% if section.settings.header_phone_value != blank or  section.settings.header_mail_value != blank %}
        <ul class="top_bar_left">
          {% if section.settings.header_phone_value != blank %}
          <li><i class="fa fa-phone"></i> {{ section.settings.header_phone_value }}</li>
          {% endif %}
          {% if section.settings.header_mail_value != blank %}
          <li><i class="fa fa-envelope"></i> <a href="mailto:{{ section.settings.header_mail_value }}"> {{ section.settings.header_mail_value }}</a></li>
          {% endif %}
        </ul>
        {% endif %}

        {% if section.settings.store_location != blank or  section.settings.track_your_order != blank or settings.display_currency or settings.show_header_currency %}
        <ul class="top_bar_right">
          {% if section.settings.store_location != blank %}
          <li> <a href="{{ section.settings.store_location_link }}"> {{ section.settings.store_location }}</a></li>
          {% endif %}
          {% if section.settings.track_your_order != blank %}
          <li><a href="{{ section.settings.track_your_order_link }}"> {{ section.settings.track_your_order }}</a></li>
          {% endif %}
          {% if settings.display_currency %}   
          <li class="header_currency">
            <ul class="tbl-list">                    
              <li class="currency dropdown-parent uppercase currency-block">
                {% include 'currencies-switcher' %}
              </li>
            </ul>
          </li>        
          {% endif %}


          <li>
            {% if section.settings.show_header_currency %}  
            {% form 'currency'%}

            <div class="custom-select">
              <select name="currency">
                {% for currency in shop.enabled_currencies %}
                {% if currency == cart.currency %}
                <option selected="true">{{currency.iso_code}}</option>
                {% else %}
                <option>{{currency.iso_code}}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>

            {% endform %}   
            {% endif %} 
          </li>

        </ul>
        {% endif %}
      </div>
    </div>
  </div>
</div>  
{% endif %}

<style>

  /* Top block */
  .top_bar { background: {{ section.settings.top_bar_bg }}; }
  .top_bar li { color:{{section.settings.top_bar_text}};}     
  .top_bar select:not(option), .top_bar a, .top_bar button {background: {{ section.settings.top_bar_bg }};  color:{{section.settings.top_bar_links }};}    
  .top_bar a:hover,  .top_bar a:hover span, .top_bar button:hover, li.init.dt-sc-toggle:hover  { color:{{section.settings.top_bar_link_hover }};}    


  .header-top a.close { background: {{ section.settings.stripe_icon }};color: {{ section.settings.stripe_icon_color }}; }  
  .header-top a.close:hover { background: {{ section.settings.stripe_icon_hover }};;color: {{ section.settings.stripe_icon_hover_color }}; }  
  .header-top { background: {{ section.settings.stripe_bg }}; }      
  .header-top ul li { color: {{ section.settings.stripe_text }}; }    

  .notification_promobtn .btn {display: inline-block; background:{{section.settings.top_bar_btn_bg}};color:{{section.settings.top_bar_btn_txt}};border:none; }


  .notification_promobtn .btn:hover {background:{{section.settings.top_bar_btn_hoverbg}};color:{{section.settings.top_bar_btn_hovertxt}};}
  /* Currency block */

  .header_currency ul select,.header_currency ul li.currency .selector-arrow:after {color:{{section.settings.currency_icon}};}   
  .header_currency ul select:hover,.header_currency ul li.currency .selector-arrow:hover:after {color:{{section.settings.currency_icon_hover}};}  
  .header_currency ul li.currency:hover:after {border-top-color:{{section.settings.currency_icon_hover}};}
  .header_currency ul li.currency:after, li.init.dt-sc-toggle:after {color:{{section.settings.currency_icon}};}
  .header_currency option {background:{{section.settings.currency_bg}};color:{{section.settings.currency_link}};}

  .top_bar .select2.select2-container .select2-selection,
  .top_bar .select2.select2-container .select2-selection .select2-selection__rendered { 
    color:{{section.settings.top_bar_links }};
    background: {{ section.settings.top_bar_bg }}; 
  }
  .top_bar .select2-container--classic .select2-selection--single .select2-selection__arrow b{ border-top-color:{{section.settings.top_bar_links }} !important;}
  .top_bar .select2-container--classic .select2-selection--single .select2-selection__arrow b{ border-bottom-color:{{section.settings.top_bar_links }} !important;}

</style>

