"type": "image_picker",
"id": "image",
"label": "Image"          
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Heading"
},
{
"type": "text",
"id": "sub_title",
"label": "Sub Heading",
"default": "Sub Heading"
},
