
{% case section.settings.grid %}
{% when '1' %}
{% when '2' %}
{%- assign column = 'two-column' -%}
{% when '3' %}
{%- assign column = 'three-column' -%}              
{% when '4' %}
{%- assign column = 'four-column' -%}              
{% when '5' %}
{%- assign column = 'five-column' -%}   
{% when '6' %}
{%- assign column = 'six-column' -%}   
{% else %}
{%- assign column = 'three-column' -%}              
{% endcase %} 

{% if section.settings.block_banner_style == 'grid-style' %}
{% assign item_style = 'grid-style' %}
{% elsif section.settings.block_banner_style == 'list-style' %}
{% assign verticalStyle = section.settings.vertical_position %}
{% assign item_style = 'list-style' %}
{% elsif section.settings.block_banner_style == 'overlay-style' %}
{% assign verticalStyle = section.settings.vertical_position %}
{% assign item_style = 'overlay-style' %}
{% endif %}

{% if section.settings.enable_overlay %}
{% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}

{% assign listWidth = section.settings.content_width | split: '/' %}
{%- assign leftColumn = listWidth[0] -%}
{%- assign rightColumn = listWidth[1] -%}  

{% assign listWidth = section.settings.masonry_content_width | split: '/' %}
{% assign masonryleftColumn = listWidth[0] %}
{% assign masonryrightColumn = listWidth[1] %} 

{% assign listWidth = section.settings.lap_content_width | split: '/' %}
{% assign lap_leftColumn = listWidth[0] %}
{% assign lap_rightColumn = listWidth[1] %}

{% assign listWidth = section.settings.lap_masonry_content_width | split: '/' %}
{% assign lap_masonryleftColumn = listWidth[0] %}
{% assign lap_masonryrightColumn = listWidth[1] %}

{% if section.settings.overlay_style == 'use_overlay' %}
{% assign overlay_class = 'with-overlay-normal' %}    
{% elsif section.settings.overlay_style == 'use_gradient_overlay' %}
{% assign overlay_class = 'with-overlay-gradient' %}
{% endif %}

{% case section.settings.background_style %}
{% when 'default' %}
{% when 'parallax' %}
{%- assign background_style = 'data-speed="2"' %}
{% when 'fixed' %}
{%- assign background_style = 'data-speed="1"' %}
{% endcase %} 

{%- assign blog = blogs[section.settings.blog] -%}
{% if section.settings.show_background_image %}
{% assign lazyScript = "lazyload" %}
{% endif %}
<div data-section-id="{{ section.id }}" data-section-type="featured-blog-section" data-item-per-view="{{ section.settings.items_per_view }}"   data-autoplay="{{section.settings.slider_autoplay}}"  data-small-screen-items="1" data-blocks-limit="{{section.blocks.size}}" data-item-space="{{section.settings.column_gap}}" data-auto-height="{{section.settings.enable_auto_height}}">
  <div class="dt-sc-section-wrapper {{lazyScript}}  {{section_overlay}}" style="{% render 'bg-color-image-padding' %}" data-style="parallax" {{background_style}} {% include 'bg_image' %}>  
    <div class="{% render 'container-settings' %}"> 
      <div class="row {{ section.settings.custom_class_name }}">
        {% render 'section-heading', class: section.id %} 
        {% unless blog.articles_count == 0 %}
        {% if section.settings.enable_masonry_grid %}        
        <div class="dt-sc-blog-section dt-sc-masonry-blog {% if section.settings.enable_masonry_reverse %}dt-sc-reverse-columns{% endif %} {% if section.settings.split_blog_layout %} style-2 {% endif %} {% if section.settings.enable_slider %}swiper-wrapper{% endif %} {% unless section.settings.enable_slider %}dt-sc-column{% endunless %}{% unless section.settings.enable_slider %} {{column}}{% endunless %}">        
          <div class="dt-sc-main-blog">              
            {% for article in blogs[section.settings.blog].articles limit: 1 %}
            <div class="dt-sc-blog-item  {{section.settings.text_position}} {{section.settings.main_banner_style}} {{section.settings.vertical_position}}"
                 {% if section.settings.main_banner_style == 'overlay-style' %}style="min-height:{{ section.settings.overlay_style_height}}px"{% endif %}>
              <div class="dt-sc-blog-image {{ overlay_class}}">
                {% if article.image %}                  
                <div class="article__grid-image-wrapper">
                  <a href="{{article.url}}">
                    {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    <img class="lazyload"
                         data-src="{{ img_url }}"
                         data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                         data-aspectratio="{{ section.settings.block_image.aspect_ratio }}"
                         data-sizes="auto"            
                         alt="{{ article.image.alt | escape }}">            
                    <noscript>
                      {{ article.image | img_url: '480x480', scale: 2 | img_tag: article.image.alt, 'dt-sc-noscript-image' }}
                    </noscript> 
                  </a>
                </div>                  
                {% endif %}
              </div>
              <div class="dt-sc-blog-content">
                <div class="dt-sc-blog-meta {% if section.settings.enable_blog_icons %}with-meta-icons{% endif %}">
                  {% if section.settings.blog_show_author %}
                  <p class="dt-sc-blog-author">
                    {% if section.settings.enable_blog_icons %}<span class="fa fa-user"></span>
                    {% else %}
                    {% include 'icon-author' %}  
                    {% endif %}
                    <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span></p>
                  {% endif %}
                  {% if section.settings.blog_show_date %}
                  <p class="dt-sc-blog-date">                    
                    {% if section.settings.enable_blog_icons %}
                    <span class="fa fa-calendar"></span>
                    {% else %}
                    {% include 'icon-date' %} 
                    {% endif %}
                    {{ article.published_at | time_tag: format: 'date' }}
                  </p>
                  {% endif %}    
                  {% if section.settings.blog_comments %}
                  {% if blog.comments_enabled? and article.comments_count > 0 %}
                  <p class="dt-sc-blog-comment">
                    {% include 'icon-comment' %}
                    {% endif %}
                    {% endif %}
                    {% if section.settings.blog_show_tag %}
                    {% if article.tags.size > 0 %}
                  <p class="dt-sc-blog-tags">                    
                    {% if section.settings.enable_blog_icons %}
                    <span class="fa fa-tags"></span>
                    {% else %}
                    {% include 'icon-tag' %}
                    {% endif %}
                    {% for tag in article.tags %}                  
                    <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">{{ tag }}</a>                  
                    {% endfor %}
                  </p>
                  {% endif %}
                  {% endif %}
                </div>
                <h4 class="dt-sc-blog-title"><a href="{{article.url}}"> {{ article.title }}</a></h4>
                {% if section.settings.blog_show_description %}
                <div class="dt-sc-blog-description">
                  {% if article.excerpt.size > 0 %}
                  {{ article.excerpt }}
                  {% else %}
                  {{ article.content | strip_html | truncate: 150 }}
                  {% endif %}
                </div>
                {% endif %}
                {% if section.settings.blog_show_button %}
                <a href="{{ article.url }}" class="dt-sc-btn"> {{ 'blogs.article.read_more' | t }}</a> 
                {% endif %}
              </div>
            </div> 
            {% endfor %}
          </div>
          <div class="dt-sc-additional-blogs">
            {% for article in blogs[section.settings.blog].articles limit: section.settings.post_limit offset: 1 %}
            <div class="dt-sc-blog-item  {{section.settings.text_position}} {{section.settings.additional_banner_style}} {{section.settings.vertical_position}}"
