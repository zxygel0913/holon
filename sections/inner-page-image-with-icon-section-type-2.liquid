{% if section.settings.enable %}
{% if section.settings.enable_overlay %}
{% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}

{% case section.settings.background_style %}
{% when 'default' %}
{% when 'parallax' %}
{%- assign background_style = 'data-speed="2"' %}
{% when 'fixed' %}
{%- assign background_style = 'data-speed="1"' %}
{% endcase %}
{% if section.settings.show_background_image %}
{% assign lazyScript = "lazyload" %}
{% endif %}
<div class="dt-sc-section-wrapper {{lazyScript}} {{section_overlay}} {% if section.settings.background_style == 'parallax' %} parallax-initiated{% endif %}" style="{% render 'bg-color-image-padding' %}" data-style="parallax" {{background_style}} {% include 'bg_image' %}>  
  <div class="{% render 'container-settings' %}"> 
    <div class="row">
      {% render 'section-heading', class: section.id %}   
      <div class="dt-sc-image-with-icons-section-type2 dt-sc-column two-column">
        <div class="dt-sc-image-with-icon-wrapper">
          <div class="dt-sc-image-section-content">
            {% if section.settings.main_title != blank  %} 
            <h4 class="dt-sc-main-title">{{section.settings.main_title}}</h4>
            {% endif %}
            {% if section.settings.sub_title %}
            <h6 class="dt-sc-sub-title">{{section.settings.sub_title}}</h6>
            {% endif %}
            {% if section.blocks.size > 0 %}    
            <div class="dt-sc-icon-blocks-section dt-sc-column">                          
              {% for block in section.blocks %}    
              <div class="dt-sc-icon-block">
                {% if block.settings.font_icon != blank  %} 
                <div class="dt-sc-icon-image"><i class="{{block.settings.font_icon}}"></i> </div>
                {% endif %}
                <div class="dt-sc-icon-content">
                  {% if block.settings.title != blank  %} 
                  <h4 class="dt-sc-main-title">{{block.settings.title}}</h4>
                  {% endif %}
                  {% if block.settings.text != blank  %} 
                  <p class="dt-sc-description">{{block.settings.text}}</p>
                  {% endif %}
                </div>             
              </div>                 
              {% endfor %}              
            </div>
            {% endif %} 
          </div>
        </div>
        <div class="dt-sc-image-with-icon-wrapper">
          {% if section.settings.image != blank %}
          <div class="dt-sc-image">            
              {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img class="lazyload"
		 		   src="{{ 'loading.gif' | asset_url }}"
                   data-src="{{ img_url }}"
                   data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                   data-sizes="auto"            
                   alt="{{ section.settings.image.alt | escape }}">            
              <noscript>
               {{ section.settings.image | img_url: '800x', scale: 2 | img_tag: section.settings.image.alt, 'dt-sc-noscript-image' }}
              </noscript>
  
          </div>
          {% endif %}
        </div>

      </div>
    </div>
  </div>
</div>
<style type="text/css">
  
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-overlay:before {      
    color: var(--DTPrimaryColor); 
    color: {{ section.settings.background_color }};    
    background: currentcolor; 
    opacity: {{ section.settings.overlay_transparency }};
  }  
  
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-heading .dt-sc-main-heading { color: var(--DTColor_Heading); color:{{ section.settings.section_heading_color }}; } 
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-heading .dt-sc-sub-heading { color: var(--DTColor_Heading); color:{{ section.settings.section_sub_heading_color }}; } 
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-heading .dt-sc-heading-description { color: var(--DTColor_Body); color:{{ section.settings.section_description_color }}; } 
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-heading .dt-sc-btn { 
    background: var(--DT_Button_BG_Color); background:{{ section.settings.section_button_bg_color }}; 
      color: var(--DT_Button_Text_Color); color:{{ section.settings.section_button_text_color }}; }
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-heading .dt-sc-btn:hover { 
    background: var(--DT_Button_BG_Hover_Color); color: var(--DT_Button_Text_Hover_Color);
    background:{{ section.settings.section_button_hover_bg_color }}; color:{{ section.settings.section_button_hover_text_color }}; }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    width: 100%;
    position: relative;
  }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content {
    display: flex;
    flex-wrap: wrap;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: flex-start;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
  }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-main-title,
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-sub-title {
    margin: 0 0 15px;
  }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section { margin: 30px 0 0 0; }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block {
    display: flex;
    flex-wrap: wrap;
    height: auto;
    align-content: center;
    align-items: flex-start;
  }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block:not(:last-child) { margin-bottom: 30px; }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block .dt-sc-icon-image {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px;
    height: 60px;    
    transition: var(--DTBaseTransition);
  }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block .dt-sc-icon-image img,
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block .dt-sc-icon-image i {
    font-size: 30px;
    transition: var(--DTBaseTransition);
  }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block .dt-sc-icon-content {
    width: 100%;    
    padding-right: 0;
    display: flex;
    flex-wrap: wrap;
  }
  
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block .dt-sc-icon-image + .dt-sc-icon-content {
    width: calc(100% - 60px);
    padding-left: 20px;    
  }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block
  .dt-sc-icon-content .dt-sc-main-title { padding: 0; }


  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image { height: 100%; float: left; position: relative; }

  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image img { width: 100%;
    height: 100%; object-fit: cover; object-position: center; }
  
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-main-title { color: var(--DTColor_Heading); color:{{ section.settings.block_heading_color }};}  
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-description  { color: var(--DTColor_Body); color:{{ section.settings.block_description_color }};}
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block .dt-sc-icon-image { background-color: var(--DTTertiaryColor); background-color:{{ section.settings.block_icon_bg_color }}; }
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block:hover .dt-sc-icon-image { background-color: var(--DTPrimaryColor); background-color: {{ section.settings.block_icon_bg_hover_color }};}
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block .dt-sc-icon-image i { color: var(--DTPrimaryColor); color:{{ section.settings.block_icon_color }}; }
  #shopify-section-{{section.id}}.inner-page-image-with-icon-section-type-2 .dt-sc-image-with-icons-section-type2 .dt-sc-image-with-icon-wrapper .dt-sc-image-section-content .dt-sc-icon-blocks-section .dt-sc-icon-block:hover .dt-sc-icon-image i { color: var(--DTTertiaryColor); color: {{ section.settings.block_icon_hover_color }}; }

</style>
{% endif %}

