  #shopify-section-{{section.id}}.inner-page-number-counter .dt-sc-number-counter-section .dt-sc-number-counter .dt-sc-number-counter-icon { 
    border-radius: var(--DTRadius); border-radius: {{ section.settings.icon_border_radius }}; }
  
