    width: 100%; height: auto;
  }
  
  #shopify-section-{{section.id}}.inner-page-number-counter .dt-sc-number-counter:not(.dt-sc-boxed):not(.dt-sc-overall-border) { background: none; }
   
  #shopify-section-{{section.id}}.inner-page-number-counter .dt-sc-number-counter.dt-sc-overall-border,
  #shopify-section-{{section.id}}.inner-page-number-counter .dt-sc-number-counter.dt-sc-boxed:before { 
    background: var(--DTBodyBGColor);
    background: {{ section.settings.block_bg_color }}; 
  }
  
  #shopify-section-{{section.id}}.inner-page-number-counter .dt-sc-number-counter.dt-sc-overall-border,
  #shopify-section-{{section.id}}.inner-page-number-counter .dt-sc-number-counter.dt-sc-boxed:before { 
    
    
