{% if section.settings.enable_icon %}
<div data-section-id="{{ section.id }}"  data-section-type="custom-text-type-1-icon-text" class="custom-text-type-1 icon-text">  

  <div class="grid-uniform">
    <ul class="support_block widget" style="background:{{ section.settings.bg_color }};float:left;width:100%;">         
      {% if section.blocks.size > 0 %}      
      {% for block in section.blocks %}        
      <li class="grid__item wow fadeInUp"  data-wow-delay="{{ settings.time_lazy_load }}ms">
        <div class="custom-text_section">           
          <div class="support_section">
             {% if block.settings.icon != blank  %} 
            <div class="support_icon">                      
              <a href="{{ block.settings.link }}"><img src="{{ block.settings.icon | img_url:"70" }}" /></a>
            </div>
            
            
            
              {% else %}
            <div class="support_icon">   
         <img src="//via.placeholder.com/44x42">
              </div>
      {% endif%}  
             
            <div class="support_text"> 
              {% if block.settings.title != blank  %}  
              <h5 style="color:{{ block.settings.title_color }};">{{ block.settings.title }}</h5>
              {% endif %} 
              {% if block.settings.sub_title != blank  %}  
              <p style="color:{{ block.settings.sub_title_color }};">{{ block.settings.sub_title }}</p>
              {% endif %}
            </div>     
          </div>
        </div>    
      </li>  
      {% endfor %}
      {% endif %}
    </ul>
  </div>

</div>
 {% endif %}
{% schema %}
{
  "name": "Custom Text",
  "class": "index-section",
  "max_blocks":10,
  "settings": [
{
"type": "checkbox",
"id": "enable_icon",
"label": "Enable",
"default": true
},
{
          "type": "color",
          "id": "bg_color",
          "label": "Bg color",
          "default": "#fff"   
        }

],
  "blocks": [
    {
      "type": "text",
      "name": "Content block",
      "settings": [ 
 		 {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
         },
		
        {
          "type": "text",
          "id": "title",
          "label": "Heading"          
        },
		{
          "type": "color",
          "id": "title_color",
          "label": "Color",
		  "default":"#000"
        },
{
          "type": "text",
          "id": "sub_title",
          "label": "Sub Title"          
        },
		{
          "type": "color",
          "id": "sub_title_color",
          "label": "Color",
		  "default":"#000"
        }, 		
		{
          "type": "text",
          "id": "link",
          "label": "Link"          
        }      
		
      ]
    }
  ]

}
{% endschema %}
