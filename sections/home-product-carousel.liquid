    color: var(--DTLinkColor); color:{{ block.settings.block_link_color }}; }
  #shopify-section-{{section.id}}.home-product-carousel .grouped-content .additional-block .dt-sc-menu-section ul.menu-links li a:hover { 
    color: var(--DTLinkHoverColor); color:{{ block.settings.block_link_hover_color }}; }


  /*   Banner */
  #shopify-section-{{section.id}}.home-product-carousel .grouped-content .additional-block .dt-sc-grid-banner-section .dt-sc-grid-banner { 
    background-color: var(--DTTertiaryColor); background-color:{{ block.settings.grid_banner_bg }}; } 
  #shopify-section-{{section.id}}.home-product-carousel .grouped-content .additional-block .dt-sc-grid-banner-section .dt-sc-grid-banner-content .dt-sc-main-title { 
    color: var(--DTColor_Heading); color:{{ block.settings.grid_banner_heading_color }}; }
  #shopify-section-{{section.id}}.home-product-carousel .grouped-content .additional-block .dt-sc-grid-banner-section .dt-sc-grid-banner-content .dt-sc-sub-title { 
    color: var(--DTColor_Heading); color:{{ block.settings.grid_banner_sub_heading_color }}; }
  #shopify-section-{{section.id}}.home-product-carousel .grouped-content .additional-block .dt-sc-grid-banner-section .dt-sc-grid-banner-content .dt-sc-description { 
    color: var(--DTColor_Body); color:{{ block.settings.grid_banner_description_color }}; }
  #shopify-section-{{section.id}}.home-product-carousel .grouped-content .additional-block .dt-sc-grid-banner-section .dt-sc-grid-banner-content .dt-sc-btn { 
