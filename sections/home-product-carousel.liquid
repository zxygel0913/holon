      border-radius: var(--DTRadius); border-radius: {{ block.settings.grid_banner_border_radius }}px;    
          } 
  
  #shopify-section-{{section.id}}.home-product-carousel .grouped-content .additional-block .dt-sc-grid-banner-section .dt-sc-grid-banner{{block.type}}-{{block.id}} { 
